{
  "$schema": "https://schemas.claude.ai/settings/v1",
  "env": {
    "ANTHROPIC_API_KEY": "sk-ant-xxxxxxxxxxxxxxxxxxxx",
    "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_xxxxxxxxxxxxxxxxxxxx",
    "BRAVE_API_KEY": "your-brave-key",
    "FIRECRAWL_API_KEY": "your-firecrawl-key",
    "CONTEXT7_API_KEY": "your-context7-key",
    "OPENAI_API_KEY": "sk-xxxxxxxxxxxxxxxxxxxx",
    "MEMORY_PATH": ".ai/memory.jsonl",
    "FASTMCP_LOG_LEVEL": "info"
  },
  "jira": {
    "JIRA_PROJECT_KEY": "SE",
    "JIRA_API_TOKEN": "your-jira-token",
    "JIRA_BASE_URL": "https://company.atlassian.net",
    "JIRA_USER_EMAIL": "your-email@company.com",
    "JIRA_AUTOMATION_WEBHOOK": "https://automation.atlassian.com/pro/hooks/xxxxxxxxxxxxxxxxxxxx",
    "JIRA_AUTOMATION_WEBHOOK_DEV": "https://automation.atlassian.com/pro/hooks/xxxxxxxxxxxxxxxxxxxx",
    "JIRA_AUTOMATION_WEBHOOK_STAGING": "https://automation.atlassian.com/pro/hooks/xxxxxxxxxxxxxxxxxxxx",
    "JIRA_AUTOMATION_WEBHOOK_PRODUCTION": "https://automation.atlassian.com/pro/hooks/xxxxxxxxxxxxxxxxxxxx"
  },
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git rm:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm test)",
      "Bash(npx jest:*)",
      "Bash(npx tsc:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "WebFetch(domain:docs.aws.amazon.com)",
      "WebFetch(domain:github.com)",
      "mcp__*"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "serverless",
    "jira",
    "fetch",
    "brave-search",
    "browser",
    "github",
    "taskmaster-ai",
    "context7",
    "awslabs.aws-documentation-mcp-server",
    "memory",
    "filesystem"
  ],
  "notes": {
    "description": "Claude configuration for AI Coding Assistants Setup",
    "apiKeys": {
      "anthropic": "Required for Claude AI features - get from https://console.anthropic.com/account/keys",
      "github": "Required for repository operations - create at https://github.com/settings/tokens",
      "context7": "Optional - Enhanced documentation lookup",
      "brave": "Optional - Web search capabilities - get from https://api.search.brave.com/app/keys",
      "firecrawl": "Optional - Advanced web scraping - get from https://www.firecrawl.dev/app/api-keys",
      "openai": "Optional - Alternative AI provider support - get from https://platform.openai.com/api-keys"
    },
    "jira": "All Jira fields are optional - only needed if using Jira integration",
    "security": [
      "Never commit this file with actual values",
      "Copy to settings.local.json and add to .gitignore",
      "Rotate API keys regularly",
      "Grant minimum required permissions for all tokens"
    ]
  }
}
