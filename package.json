{
  "name": "ai-coding-assistants-setup",
  "version": "2.0.7",
  "description": "Setup tool for integrating AI coding assistants into development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ai-coding-assistants-setup": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "coding",
    "assistant",
    "setup",
    "claude",
    "roo",
    "mcp",
    "git-hooks"
  ],
  "author": "Cody Swann",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "cosmiconfig": "^9.0.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "ignore": "^5.3.0",
    "js-yaml": "^4.1.0",
    "jsonschema": "^1.4.1",
    "micromatch": "^4.0.5",
    "ora": "^7.0.1",
    "semver": "^7.5.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.2.4",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.3.4",
    "ts-node": "10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodySwannGT/ai-coding-assistants-setup.git"
  },
  "bugs": {
    "url": "https://github.com/CodySwannGT/ai-coding-assistants-setup/issues"
  },
  "homepage": "https://github.com/CodySwannGT/ai-coding-assistants-setup#readme"
}
